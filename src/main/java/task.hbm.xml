<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.keegmow.tasklist.Task" table="tasklist">
		<id name="id" column="id" type="int">
			<generator class="increment"></generator>
		</id>
	<!-- 	name = jave var name, column = DB column name -->
		<property name="active" column="active" type="boolean"></property> 
		<property name="taskDesc" column="taskDesc" type="string"></property>

	</class>
</hibernate-mapping> 